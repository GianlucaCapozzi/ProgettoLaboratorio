<h2> Lista cliniche </h2><br>
<table>
	<%= form_tag('/prova', method: "post") do %>
		<% @clinics.each do |clinic| %>
			<tr> 
				<td> <%= radio_button_tag(:id, clinic.id) %> </td>
				<td> <%= clinic.name %> </td>
			</tr>
		<% end %>
		<%= submit_tag("Select") %>
	<% end %>
</table>

<br>
<table>
	<% @clinics.each do |clinic| %>
		<tr> <td> <%= link_to clinic.name, clinic_path(clinic) %> </tr> </td>
	<% end %>
</table>
